{
  "name": "mendeleev_api",
  "description": "Mendeleev API",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "prestart": "npm run -s build",
    "build": "babel src -s -D -d dist",
    "start": "NODE_ENV=prod node dist",
    "dev:app": "NODE_ENV=dev nodemon -w src --exec \"babel-node src\"",
    "dev:docker": "docker-compose -f docker-compose.dev.yml up -d",
    "dev": "yarn dev:docker && yarn dev:app",
    "lint": "eslint 'src/**/*.js'",
    "lint:fix": "yarn lint --fix",
    "test:app": "NODE_ENV=test jest --passWithNoTests",
    "test:docker": "docker-compose -f docker-compose.test.yml up -d",
    "test": "yarn test:docker && yarn test:app",
    "test:watch": "yarn test --watch"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "cookie-parser": "~1.4.3",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "express": "~4.16.0",
    "http-errors": "~1.6.2",
    "mongoose": "^5.4.3",
    "morgan": "~1.9.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-jest": "^23.6.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-0": "^6.24.1",
    "eslint": "^5.12.1",
    "eslint-plugin-jest": "^22.1.3",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.18.9",
    "supertest": "^3.4.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "yarn lint:fix",
      "yarn test",
      "git add"
    ]
  }
}
