{
  "name": "mendeleev_api",
  "description": "Mendeleev API",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "docker-compose -f docker-compose.dev.yml down && docker-compose -f docker-compose.dev.yml build && docker-compose -f docker-compose.dev.yml up",
    "test": "docker-compose -f docker-compose.test.yml build && docker-compose -f docker-compose.test.yml up --build --exit-code-from app_test",
    "lint": "eslint '**/*.{js,jsx}'",
    "prettier": "prettier --check '**/*.{md,yml,json}'",
    "release:debug": "semantic-release --debug"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "cookie-parser": "~1.4.3",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "dotenv-expand": "^5.1.0",
    "express": "~4.16.0",
    "http-errors": "~1.6.2",
    "mongo-express-middleware": "^1.6.0",
    "mongoose": "^5.4.3",
    "morgan": "~1.9.0",
    "remove": "^0.1.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "@babel/register": "^7.0.0",
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-angular": "^8.0.0",
    "@semantic-release/changelog": "^3.0.4",
    "@semantic-release/git": "^7.0.16",
    "@semantic-release/gitlab": "^3.1.7",
    "babel-eslint": "^10.0.1",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "cz-customizable": "^6.2.0",
    "eslint": "^5.12.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "mocha": "^5.2.0",
    "mongodb": "^3.3.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.18.2",
    "semantic-release": "^15.13.18"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.{md,yml,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "./commitizen.config.js"
    }
  }
}
