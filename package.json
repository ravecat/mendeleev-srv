{
  "name": "mendeleev_api",
  "description": "Mendeleev API",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev:app": "nodemon -w src --exec \"babel-node src\"",
    "dev:docker": "docker-compose -f docker/dev/docker-compose.yml up -d",
    "dev": "yarn dev:docker && yarn dev:app",
    "test:app": "mocha --opts .mocharc",
    "test:docker": "docker-compose -f docker/test/docker-compose.yml up -d",
    "test": "yarn test:docker && yarn test:app",
    "lint": "eslint 'src/**/*.js'",
    "lint:fix": "yarn lint --fix"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "cookie-parser": "~1.4.3",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "dotenv-expand": "^5.1.0",
    "express": "~4.16.0",
    "http-errors": "~1.6.2",
    "mongo-express-middleware": "^1.0.0",
    "mongoose": "^5.4.3",
    "morgan": "~1.9.0",
    "remove": "^0.1.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "@babel/register": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "eslint": "^5.12.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.9"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "yarn lint:fix",
      "yarn test",
      "git add"
    ]
  }
}
